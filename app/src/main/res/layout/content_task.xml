                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Datum: Kevin koffie"
                android:textSize="22dp"
                />

            <TextView
                android:id="@+id/taskSevenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Datum: Kevin koffie"
